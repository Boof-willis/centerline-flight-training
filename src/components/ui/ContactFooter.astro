---
// Contact page footer component with specific navigation
---

<footer class="bg-black text-white py-16">
  <div class="max-w-[1200px] mx-auto px-8">
    <div class="flex flex-col md:flex-row justify-between gap-16">
      <!-- Brand/About Column - Left Side -->
      <div class="md:max-w-[350px]">
        <div class="flex items-center gap-3 mb-6">
          <a href="/">
            <img
              src="/images/logo/Centerline-Logo.svg"
              alt="Centerline Flight Training"
              class="h-12 w-auto"
            />
          </a>
        </div>
        <p class="text-gray-400 leading-relaxed mb-6 font-heading">
          Professional flight training in Spanish Fork, Utah. Part 61 flexible scheduling for working professionals. From discovery flights to airline careers.
        </p>
        <p class="text-gray-500 text-sm font-heading">
          Hangar #122 • Spanish Fork Airport (SPK)
        </p>
      </div>

      <!-- Links Group - Right Side -->
      <div class="flex flex-col sm:flex-row gap-12 md:gap-16">
        <!-- Quick Links Column -->
        <div>
          <h4 class="text-base font-medium mb-6 text-gray-300 font-heading">Quick Links</h4>
          <ul class="space-y-3">
            <li>
              <a href="/" class="text-gray-400 hover:text-white transition-colors font-heading">Home</a>
            </li>
            <li>
              <a href="#contact-form" class="text-gray-400 hover:text-white transition-colors font-heading scroll-to-form">Get in Touch</a>
            </li>
            <li>
              <a href="#map-section" class="text-gray-400 hover:text-white transition-colors font-heading scroll-to-map">Find Us</a>
            </li>
          </ul>
        </div>

        <!-- Contact Column -->
        <div>
          <h4 class="text-base font-medium mb-6 text-gray-300 font-heading">Contact</h4>
          <ul class="space-y-3">
            <li>
              <a href="tel:+18014770418" class="text-gray-400 hover:text-white transition-colors font-heading">
                (801) 477-0418
              </a>
            </li>
            <li>
              <a href="mailto:contact@centerlineaviationinc.com" class="text-gray-400 hover:text-white transition-colors font-heading">
                Email Us
              </a>
            </li>
            <li>
              <a href="https://maps.google.com/?q=Spanish+Fork+Airport+Hangar+122" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-colors font-heading">
                Directions
              </a>
            </li>
            <li class="text-gray-500 text-sm pt-2 font-heading">
              Mon-Fri: 8am-5pm<br />
              Sat: 8am-3pm
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Legal Links -->
    <div class="border-t border-gray-800 mt-12 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-500 text-sm font-heading">
          © 2025 Centerline Aviation INC. All rights reserved.
        </p>
        <div class="flex gap-6">
          <a href="/privacy-policy" class="text-gray-500 hover:text-white text-sm transition-colors font-heading">
            Privacy Policy
          </a>
          <a href="/terms-of-service" class="text-gray-500 hover:text-white text-sm transition-colors font-heading">
            Terms of Service
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<script is:inline>
  // Handle smooth scrolling for footer links
  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', () => {
      const scrollLinks = document.querySelectorAll('.scroll-to-form, .scroll-to-map');
      
      scrollLinks.forEach(link => {
        link.addEventListener('click', (e) => {
          e.preventDefault();
          const href = link.getAttribute('href');
          const target = document.querySelector(href);
          
          if (target) {
            target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        });
      });
    });
  }
</script>

