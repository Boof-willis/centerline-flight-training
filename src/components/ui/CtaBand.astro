---
// CTA Band section
---

<style>
  @media (max-width: 768px) {
  .cta-bg-image {
    background-position: 40% center !important;
  }
}
</style>

<section class="relative py-32 text-center overflow-hidden">
  <!-- Background Image with Overlay -->
  <div 
    class="absolute inset-0 z-0 cta-bg-image"
    style="background-image: url('https://pub-b9b491aee0b94c2c8e6c5d1dde4848db.r2.dev/public/images/aircraft/airplane%20flying%20over%20sunset%20reflective%20lake.avif'); background-size: cover; background-position: center;"
  ></div>
  <div class="absolute inset-0 bg-black/70 z-0"></div>

  <!-- Content -->
  <div class="relative z-10 max-w-[1200px] mx-auto px-8">
    <h2 class="text-[36px] lg:text-[52px] font-medium mb-6 text-white font-heading">Ready to Start Flying?</h2>
    <p class="text-xl mb-10 text-white/90 font-heading max-w-[600px] mx-auto">
      Take the first step toward your pilot career with a discovery flight today
    </p>
    <div class="flex gap-4 justify-center flex-wrap">
      <a href="#discovery" class="cta-button font-heading">Book Discovery Flight</a>
    </div>
  </div>
</section>

