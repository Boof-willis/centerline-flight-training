  </head>
  <body class="overflow-x-hidden">
    <!-- Header -->
    <ContactHeaderClient client:load />

    <!-- Contact Page Hero - Dark Theme -->
    <section id="contact-form" class="pt-32 pb-20 bg-black min-h-screen flex items-center">
      <div class="max-w-[1200px] mx-auto w-full px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
          <!-- Left Side - Contact Information -->
          <div class="flex flex-col">
            <!-- Header -->
            <h1 class="text-[54px] lg:text-[72px] font-medium text-white mb-6 font-heading leading-tight">
              Let's get in touch
            </h1>
            
            <!-- Description -->
            <p class="text-lg md:text-xl text-white mb-8 font-heading font-light leading-relaxed">
              Ready to take your pilot training to the next level? Reach out today and let's create a personalized training plan for you.
            </p>
            
            <!-- Separator -->
            <div class="w-full h-px bg-white/20 mb-8"></div>
            
            <!-- Contact Details with Icons -->
            <div class="space-y-6">
              <div class="flex items-center gap-4">
                <svg class="w-6 h-6 text-white flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <a href="tel:+18014770418" class="text-xl text-white hover:text-gray-300 transition-colors font-heading font-light">
                  (801) 477-0418
                </a>
              </div>
              
              <div class="flex items-center gap-4">
                <svg class="w-6 h-6 text-white flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <a href="mailto:contact@centerlineaviationinc.com" class="text-xl text-white hover:text-gray-300 transition-colors font-heading font-light">
                  contact@centerlineaviationinc.com
                </a>
              </div>
            </div>
          </div>

          <!-- Right Side - Contact Form -->
          <div class="flex items-start">
            <div class="w-full rounded-2xl shadow-xl p-8 md:p-12" style="background: linear-gradient(to bottom, rgba(46, 46, 46, 0.35) 0%, rgba(46, 46, 46, 0.5) 100%);">
