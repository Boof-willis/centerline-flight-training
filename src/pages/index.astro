---
import '@/styles/global.css';
import HeaderClient from '@/components/ui/islands/HeaderClient';
import HeroClient from '@/components/ui/islands/HeroClient';
import BenefitsBar from '@/components/ui/BenefitsBar.astro';
import CareerCards from '@/components/ui/islands/CareerCards';
import ReviewCarousel from '@/components/ui/islands/ReviewCarousel';
import TrainingPathway from '@/components/ui/islands/TrainingPathway';
import AircraftShowcase from '@/components/ui/islands/AircraftShowcase';
import TestimonialsAnimated from '@/components/ui/islands/TestimonialsAnimated';
import Faq from '@/components/ui/islands/Faq';
import CtaBand from '@/components/ui/CtaBand.astro';
import Footer from '@/components/ui/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Centerline Flight Training - Utah's Premier Part-61 Flight School</title>
    <meta name="description" content="Train on your schedule in Spanish Fork. Weekend & evening flights for working professionals. Modern hangared fleet, transparent pricing, pay-as-you-go from $140." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="overflow-x-hidden">
    <!-- Header -->
    <HeaderClient client:load />

    <!-- Hero Section -->
    <HeroClient client:load />

    <!-- Benefits Bar -->
    <BenefitsBar />

    <!-- Career Paths Section -->
    <section class="py-20 bg-white">
      <div class="max-w-[1200px] mx-auto px-8">
        <h2 class="text-center text-[36px] sm:text-[40px] lg:text-[52px] font-medium font-heading mb-6 text-gray-800">Why Become a Pilot?</h2>
        <p class="text-center max-w-[700px] mx-auto mb-12 text-lg text-gray-600 font-heading">
          Whether you're pursuing an aviation career or flying for fun, we'll guide you from discovery flight to your goals.
        </p>
        <CareerCards client:visible />
      </div>
    </section>

    <!-- Review Carousel Section -->
    <section class="py-20 bg-white">
      <div class="max-w-[1200px] mx-auto px-8">
        <ReviewCarousel client:visible />
      </div>
    </section>

    <!-- Training Pathway Section -->
    <section id="programs" class="py-20 bg-white">
      <div class="max-w-[1200px] mx-auto px-8">
        <h2 class="text-center text-[36px] sm:text-[40px] lg:text-[52px] font-medium font-heading mb-6 text-gray-800">Your Training Pathway</h2>
        <p class="text-center max-w-[700px] mx-auto mb-12 text-lg text-gray-600 font-heading">
          Part 61 flexible training means you control the pace. Train as often as you want while keeping your current job.
        </p>
        <TrainingPathway client:visible />
        <div class="text-center mt-8">
          <a href="#discovery" class="cta-button !bg-[#F2F2F2] !border !border-[#E1E1E1] !shadow-none !h-[48px]">Start Your Training Journey</a>
        </div>
      </div>
    </section>

    <!-- Aircraft Showcase Section -->
    <section id="discovery" class="bg-black py-20 min-h-screen">
      <AircraftShowcase client:visible />
    </section>

    <!-- Why Us Section -->
    <section id="why-us" class="py-20 bg-white">
      <div class="max-w-[1200px] mx-auto px-8">
        <!-- Header -->
        <div class="text-center mb-12">
          <h2 class="text-[36px] sm:text-[40px] lg:text-[52px] font-medium font-heading text-gray-800">Why Utah Students Choose Centerline</h2>
        </div>

            <!-- Content -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
              <div>
                <div class="h-[400px] rounded-xl overflow-hidden">
                  <img
                    src="/images/aircraft/why us.jpg"
                    alt="Diamond aircraft in hangar at Centerline Flight Training"
                    class="w-full h-full object-cover"
                  />
                </div>
              </div>
          
          <div>
            <ul class="list-none space-y-6">
              <li class="border-b border-gray-200 pb-6">
                <h3 class="text-xl font-semibold mb-2 text-gray-900 font-heading">Your Schedule, Your Pace</h3>
                <p class="text-gray-600 font-heading">Morning, evening, weekend availability—train as often as you want while keeping your job</p>
              </li>
              
              <li class="border-b border-gray-200 pb-6">
                <h3 class="text-xl font-semibold mb-2 text-gray-900 font-heading">Pay-As-You-Go + Financing</h3>
                <p class="text-gray-600 font-heading">No large upfront payments required—flexible payment plans for all budgets</p>
              </li>
              
              <li class="pb-6">
                <h3 class="text-xl font-semibold mb-2 text-gray-900 font-heading">Newer Aircraft Only</h3>
                <p class="text-gray-600 font-heading">2019+ Diamond DA20 & DA40 with modern Garmin glass cockpits—newer than competing schools</p>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="bg-gray-50 py-20">
      <TestimonialsAnimated client:visible />
    </section>

    <!-- Instructors and Fleet Section -->
    <section id="fleet" class="py-20 bg-white">
      <div class="max-w-[1200px] mx-auto px-8">
        <h2 class="text-center text-4xl font-bold mb-12 text-gray-800 font-heading">Meet Our Team & Fleet</h2>

        <!-- Team Photo -->
        <div class="mb-16">
          <h3 class="text-center mb-8 text-gray-800 text-2xl font-heading">Your Flight Instructors</h3>
          <div class="w-full max-w-[900px] mx-auto rounded-xl overflow-hidden">
            <img
              src="/images/people/Team Photo.jpg"
              alt="Centerline Flight Training Team - Flight Instructors and Staff"
              class="w-full h-auto object-cover"
            />
          </div>
          <p class="text-center mt-6 text-gray-600 max-w-[700px] mx-auto font-heading">
            Our CFIs advance to SkyWest, FedEx, and corporate aviation—learn from pilots with real career experience who know exactly what it takes to succeed.
          </p>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section id="faq" class="bg-white py-24">
      <div class="max-w-[1000px] mx-auto px-8">
        <div class="text-center mb-16">
          <p class="text-gray-500 text-sm uppercase tracking-wider mb-4">FAQ</p>
          <h2 class="text-4xl md:text-[52px] font-normal text-gray-900 leading-tight font-heading">
            Everything you need to know
          </h2>
        </div>
        <Faq client:visible />
      </div>
    </section>

    <!-- CTA Band -->
    <CtaBand />

    <!-- Footer -->
    <Footer />
  </body>
</html>

