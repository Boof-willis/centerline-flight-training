<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=AW-17843692381"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'AW-17843692381');
    </script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>404 - Page Not Found | Centerline Flight Training</title>
    <meta name="description" content="The page you're looking for couldn't be found. Return to Centerline Flight Training's homepage." />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="404 - Page Not Found | Centerline Flight Training" />
    <meta property="og:description" content="The page you're looking for couldn't be found. Return to Centerline Flight Training's homepage." />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="404 - Page Not Found | Centerline Flight Training" />
    <meta name="twitter:description" content="The page you're looking for couldn't be found. Return to Centerline Flight Training's homepage." />
    
    <link rel="apple-touch-icon" href="https://pub-b9b491aee0b94c2c8e6c5d1dde4848db.r2.dev/public/images/logo/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="96x96" href="https://pub-b9b491aee0b94c2c8e6c5d1dde4848db.r2.dev/public/images/logo/favicon-96x96.png" />
    <link rel="icon" type="image/x-icon" href="https://pub-b9b491aee0b94c2c8e6c5d1dde4848db.r2.dev/public/images/logo/favicon.ico" />
    <link rel="manifest" href="https://pub-b9b491aee0b94c2c8e6c5d1dde4848db.r2.dev/public/images/logo/site.webmanifest" />
    <link rel="icon" type="image/png" sizes="192x192" href="https://pub-b9b491aee0b94c2c8e6c5d1dde4848db.r2.dev/public/images/logo/web-app-manifest-192x192.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="https://pub-b9b491aee0b94c2c8e6c5d1dde4848db.r2.dev/public/images/logo/web-app-manifest-512x512.png" />
  </head>
  <body class="overflow-x-hidden">
    <!-- Header -->
    <HeaderClient client:load />

    <!-- 404 Content -->
    <main class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 pt-32 pb-20 px-8">
      <div class="max-w-[600px] mx-auto text-center">
        <h1 class="text-[120px] md:text-[160px] font-bold text-white mb-4 leading-none font-heading">
          404
        </h1>
        <h2 class="text-3xl md:text-4xl font-medium text-white mb-4 font-heading">
          Page Not Found
        </h2>
        <p class="text-lg md:text-xl text-gray-300 mb-8 font-heading max-w-[500px] mx-auto">
          Looks like this page took an unexpected flight path. Let's get you back on course.
        </p>
        <a href="/" class="cta-button">
          Return to Home
        </a>
      </div>
    </main>

    <!-- Footer -->
    <Footer />

    <!-- LeadConnector Dynamic Phone Number Tracking Scripts - Delayed for React hydration -->
    <script is:inline>
      // Wait for all React components to hydrate before loading LeadConnector scripts
      window.addEventListener('load', function() {
        // Check if this is a tracked session (has UTM params or gclid in localStorage)
        var utmParams = localStorage.getItem('utm_params');
        var isPaidTraffic = false;
        
        if (utmParams) {
          try {
            var params = JSON.parse(utmParams);
            // Check if we have any tracking parameters
            isPaidTraffic = !!(params.utm_source || params.utm_medium || params.utm_campaign || params.gclid || params.fbclid || params.msclkid);
          } catch (e) {
            // Ignore parse errors
          }
        }
        
        if (isPaidTraffic) {
          // Add a small delay to ensure React hydration is complete
          setTimeout(function() {
            var script1 = document.createElement('script');
            script1.src = 'https://backend.leadconnectorhq.com/appengine/loc/10LCZDnUvwfyH3005w5r/pool/45veuB8MghSmQSK2MtZQ/number_pool.js';
            document.body.appendChild(script1);
            
            script1.onload = function() {
              var script2 = document.createElement('script');
              script2.src = 'https://backend.leadconnectorhq.com/appengine/js/user_session.js';
              document.body.appendChild(script2);
            };
          }, 100);
        }
      });
    </script>
  </body>
</html>

